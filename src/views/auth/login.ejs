<!-- src/views/auth/login.ejs -->

<%- include('../partials/header.ejs') %>

<!-- Agregar esto al principio de tu EJS, dentro del cuerpo del documento -->
<div id="forgot-password-alert-container" class="position-fixed top-0 start-50 translate-middle-x p-3" style="z-index: 1050">
  <!-- Contenedor de alerta emergente para "Olvidé mi contraseña" -->
</div>


 
<div class="container-fluid">
  <div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        <h2 class="titulo-admin" style="text-align: center;">Ingresar a mi cuenta</h2>
        <% if (typeof error !== 'undefined' && error) { %>
          <p style="color: red; text-align: center;"><%= error %></p>
        <% } %>

        <form method="post" action="/auth/login">
          <div class="row">
            <div class="col-md-4 flex-box-especial">
              <label for="email" class="label-texto">Email:</label>
            </div>
            <div class="col-md-8 flex-box-especial">
              <input type="email" id="email" name="email" required placeholder="ejemplo@gmail.com" class="formulario-bordes-rojo">
            </div>
          </div>

          <div class="row">
            <div class="col-md-4 flex-box-especial">
              <label for="password" class="label-texto">Contraseña:</label>
            </div>
            <div class="col-md-8 flex-box-especial">
              <input type="password" id="password" name="password" required placeholder="••••••••" class="formulario-bordes-rojo" minlength="3" maxlength="20">
            </div>
          </div>

          <div class="boton-y-terminos">
            <button type="submit"  class="boton-enviar" >Ingresar </button>
            <input type="checkbox" id="recordarme" name="aceptar"> Recordarme
          </div>

          <p class="detalles"><a href="#" onclick="showForgotPasswordAlert()">Olvidé mi contraseña</a> | <a href="/auth/register">Registrarme</a></p>


      </form>

        


    </div>
    <div class="col-md-4">
    </div>
  </div>
</div>



  
<script>
  function showForgotPasswordAlert() {
    // Mostrar la alerta
    const alertContainer = document.getElementById('forgot-password-alert-container');
    
    // Crear el elemento de alerta
    const alertElement = document.createElement('div');
    alertElement.className = 'alert alert-danger alert-dismissible fade show';
    alertElement.role = 'alert';
    alertElement.innerHTML = `
      Aun no se encuentra disponible
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    `;

    // Agregar el elemento al contenedor
    alertContainer.innerHTML = '';
    alertContainer.appendChild(alertElement);

    // Cerrar automáticamente después de 5 segundos
    setTimeout(() => {
      alertContainer.innerHTML = '';
    }, 5000);
  }
</script>



  
    
    

    
    


