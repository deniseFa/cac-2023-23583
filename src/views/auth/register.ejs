<%- include('../partials/header.ejs') %>

<div id="forgot-password-alert-container" class="position-fixed top-0 start-50 translate-middle-x p-3" style="z-index: 1050">
  <!-- Contenedor de alerta emergente para "Olvidé mi contraseña" -->
</div>


<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
        <h2 class="titulo-admin" style="text-align: center;">CREA TU CUENTA</h2>
        <h3 class="sub-titulo-admin" style="text-align: center;">Completa el formulario para ser parte del mundo de los Funkos</h3>


  <% if (typeof error !== 'undefined' && error) { %>
    <p style="color: red; text-align: center;"><%= error %></p>
  <% } %>

  <form method="post" action="/auth/register">


          <div class="row">
            <div class="col-md-4 flex-box-especial">
                <label class="label-texto" for="name">Nombre:</label>
            </div>
            <div class="col-md-8 flex-box-especial">
                <input class="formulario-bordes-rojo" type="text" id="name" name="name" placeholder="Laura"  required minlength="3" maxlength="50">
            </div>
          </div>
          <div class="row">
            <div class="col-md-4 flex-box-especial">
                <label class="label-texto" for="lastname">Apellido:</label>
            </div>
            <div class="col-md-8 flex-box-especial">
                <input class="formulario-bordes-rojo" type="text" id="lastname" name="lastname" placeholder="Torres"  required minlength="3" maxlength="50"> 
            </div>
          </div>

          <div class="row">
            <div class="col-md-4 flex-box-especial">
                <label class="label-texto" for="email">Correo electrónico:</label>
            </div>
            <div class="col-md-8 flex-box-especial">
                <input class="formulario-bordes-rojo" type="email" id="email" name="email" placeholder="laura@email.com"  required minlength="3" maxlength="50">
            </div>
          </div>
          <div class="row">
            <div class="col-md-4 flex-box-especial">
                <label class="label-texto" for="password">Contraseña:</label>
            </div>
            <div class="col-md-8 flex-box-especial">
                <input class="formulario-bordes-rojo" type="password" id="password" name="password" placeholder="••••••••"  required minlength="3" maxlength="20">
            </div>
          </div>
          <div class="row">
            <div class="col-md-4 flex-box-especial">
               <label class="label-texto" for="confirmPassword">Repetir Contraseña:</label>
            </div>
            <div class="col-md-8 flex-box-especial">
               <input class="formulario-bordes-rojo" type="password" id="confirmPassword" name="confirmPassword" placeholder="••••••••"  required minlength="3" maxlength="20">
            </div>
          </div>
          <div class="boton-y-terminos">
           <button type="submit" class="boton-enviar" >Registrarse</button>
           <input type="checkbox" name="aceptar"  required> Acepto <a href="#" onclick="showForgotPasswordAlert()" >Términos y Condiciones</a>
         </div>
  </form>


    </div>
    <div class="col-md-3">
    </div>
  </div>
</div>



  
<script>
  function showForgotPasswordAlert() {
    // Mostrar la alerta
    const alertContainer = document.getElementById('forgot-password-alert-container');
    
    // Crear el elemento de alerta
    const alertElement = document.createElement('div');
    alertElement.className = 'alert alert-danger alert-dismissible fade show';
    alertElement.role = 'alert';
    alertElement.innerHTML = `
      Aun no se encuentra disponible
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    `;

    // Agregar el elemento al contenedor
    alertContainer.innerHTML = '';
    alertContainer.appendChild(alertElement);

    // Cerrar automáticamente después de 5 segundos
    setTimeout(() => {
      alertContainer.innerHTML = '';
    }, 2000);
  }
</script>



